<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animationlayout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SlideUpActivity"></activity>
        <activity android:name=".SlideDownActivity" />
        <activity android:name=".SlideRightActivity" />
        <activity android:name=".SlideLeftActivity" />
        <activity android:name=".SwipeRightActivity" />
        <activity android:name=".SwipeLeftActivity" />
        <activity android:name=".InAndOutActivity" />
        <activity android:name=".CardActivity" />
        <activity android:name=".ShrinkActivity" />
        <activity android:name=".SplitActivity" />
        <activity android:name=".DiagonalActivity" />
        <activity android:name=".SpinActivity" />
        <activity android:name=".WindmillActivity" />
        <activity android:name=".FadeActivity" />
        <activity android:name=".ZoomActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>